<h1>Search Results</h1>
<p><%= link_to "Back", new_search_path %></p>

<% if @search.search_profile.empty? %>
    <p>No profiles were found.</p>
<% else %>
        <thead>
            <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Sex</th>
            <th>City</th>
            <th>Biography</th>
            <th>User</th>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @search.search_profile do |profile| %>
            <tr>
                <td><%= profile.first_name %></td>
                <td><%= profile.last_name %></td>
                <td><%= profile.sex %></td>
                <td><%= profile.city %></td>
                <td><%= profile.biography %></td>
                <td><%= link_to 'Show', profile %></td>
                <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
                <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
</table>
<% end %>