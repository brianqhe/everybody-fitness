
<%# Simple form for the experiences model that requires a description to be put in in the form of string inputs %>
<%= simple_form_for(@experience) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
      <%= f.input :description, required: true, autofocus: true %>
  </div>

<%# Submit button for the description of the experience to be added to the model %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
