
<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, autofocus: true %>
    <%= f.input :last_name, required: true, autofocus: true %>
    <%= f.input :sex, required: true, autofocus: true, collection: [['Male'], ['Female'], ['Other']] %>
    <%= f.input :city, required: true, autofocus: true, collection: [['Sydney'], ['Melbourne'], ['Brisbane'], ['Canberra'], ['Adelaide'], ['Perth']] %>
    <%= f.input :biography, required: true, autofocus: true %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
